<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 透明返回按钮 -->
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;返回"
        android:textColor="#333333"
        android:textSize="16sp"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 可滑动的游戏图片 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_game_images"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游戏信息区域 -->
    <LinearLayout
        android:id="@+id/ll_game_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/vp_game_images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 游戏图标 -->
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/iv_game_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                tools:src="@drawable/ic_launcher_foreground" />

        </androidx.cardview.widget.CardView>

        <!-- 游戏信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏名"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="王者荣耀" />

            <TextView
                android:id="@+id/tv_game_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简介区域"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="5v5英雄公平对战手游" />

        </LinearLayout>

    </LinearLayout>

    <!-- 简介区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/ll_game_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_full_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="简介区域"
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            tools:text="这是游戏的详细介绍内容，可以包含多行文字，描述游戏的特色、玩法等信息。" />

    </androidx.cardview.widget.CardView>

    <!-- 帖子板块区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_posts_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 板块标题和发帖按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- 游戏图标 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp">

                    <ImageView
                        android:id="@+id/iv_section_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"
                        tools:src="@drawable/ic_launcher_foreground" />

                </androidx.cardview.widget.CardView>

                <!-- 板块信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tv_section_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="板块名称"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="王者荣耀" />

                    <TextView
                        android:id="@+id/tv_section_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简介"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        tools:text="游戏讨论区" />

                </LinearLayout>

                <!-- 发帖按钮 -->
                <TextView
                    android:id="@+id/tv_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_publish_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="发帖"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- 最热/最新切换标签 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最热"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/tv_latest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginHorizontal="16dp" />

            <!-- 帖子列表 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_posts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>